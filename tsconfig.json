{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@root/*": ["./src/*"],
      "@domain": ["./src/domain"],
      "@hooks": ["./src/hooks/index"],
      "@services": ["./src/services"],
      "@theme": ["./src/theme/theme.ts"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
